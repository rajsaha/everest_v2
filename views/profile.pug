extends layout

block content
		.row
			.col-md-12.profile-box
				h2
					strong Collections
				.collections
					if collections == ''
						p You don't have any collections yet. Go make one!
					else
						#{collections}
		hr
		.row
			.col-md-12.profile-box
				h2 
					strong Followers
				if followers == ''
					p You're not following anyone yet. Go follow someone!
				else
					each follower in followers
						if follower != username
							.followers
								span(onclick='load_user_profile(\''+ follower +'\')')=follower
								span &nbsp;
								button.btn.btn-light.float-right(id="btn_follow_" + follower onclick="unfollow_user('"+ follower +"')")
									i.fas.fa-user-times &nbsp; &nbsp;
									span Unfollow
					
				h2
					strong Personal Details
				h4 
					strong Current Level
				.trophy-rack
					if level == '0'
						p.trophy-label You don't have a level yet. Earn points by sharing resources!
						img.responsive.trophy(src='img/level1trophy.svg' style='opacity:0.1;')
						img.responsive.trophy(src='img/level2trophy.svg' style='opacity:0.1;')
						img.responsive.trophy(src='img/level3trophy.svg' style='opacity:0.1;')
						img.responsive.trophy(src='img/level4trophy.svg' style='opacity:0.1;')
					if level == '1'
						img.responsive.trophy(src='img/level1trophy.svg')
						img.responsive.trophy(src='img/level2trophy.svg' style='opacity:0.1;')
						img.responsive.trophy(src='img/level3trophy.svg' style='opacity:0.1;')
						img.responsive.trophy(src='img/level4trophy.svg' style='opacity:0.1;')
					if level == '2'
						img.responsive.trophy(src='img/level1trophy.svg')
						img.responsive.trophy(src='img/level2trophy.svg')
						img.responsive.trophy(src='img/level3trophy.svg' style='opacity:0.1;')
						img.responsive.trophy(src='img/level4trophy.svg' style='opacity:0.1;')
					if level == '3'
						img.responsive.trophy(src='img/level1trophy.svg')
						img.responsive.trophy(src='img/level2trophy.svg')
						img.responsive.trophy(src='img/level3trophy.svg')
						img.responsive.trophy(src='img/level4trophy.svg' style='opacity:0.1;')
					if level == '4'
						img.responsive.trophy(src='img/level1trophy.svg')
						img.responsive.trophy(src='img/level2trophy.svg')
						img.responsive.trophy(src='img/level3trophy.svg')
						img.responsive.trophy(src='img/level4trophy.svg')
				h4
					strong Update Details
				form
					.form-group
						label(for='exampleInputEmail1') Name
						input.form-control(type='text', aria-describedby='emailHelp', placeholder=name, name='user_fullname')
					.form-group
						label(for='exampleInputPassword1') Email
						input.form-control(type='email', placeholder=email, name='user_email')
					button.btn.btn-secondary(type='button' onclick='update_user_details()', style='margin-bottom:25px;') Update		
		.row
			.col-md-12
				.error-user-profile
